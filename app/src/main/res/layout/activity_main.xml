<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="spinnerAdapter"
            type="android.widget.ArrayAdapter"/>


        <variable
            name="clickHandlers"
            type="iot.empiaurhouse.papyruz.view.MainActivity.MainActivityClickHandlers"/>


    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainActivity">



        <include
            android:id="@+id/secondary_layout"
            layout="@layout/content_main"
            bind:secondarySpinnerAdapter="@{spinnerAdapter}"
            bind:secondaryClickHandlers="@{clickHandlers}"
            />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:onClick="@{clickHandlers::onFABClicked}"
            app:srcCompat="@drawable/ic_add_gold_24dp" />

    </android.support.design.widget.CoordinatorLayout>
</layout>